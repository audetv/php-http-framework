{
    "name": "audetv/php-http-framework",
    "description": "Demo PHP HTTP Framework code",
    "type": "project",
    "license": "BDS-3-Clause",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests/App/",
            "Test\\Framework\\": "tests/Framework/"
        }
    }
}
